{
  "name": "api",
  "version": "0.0.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "bun --watch run src/index.ts",
    "lint": "biome check .",
    "format": "biome check --write .",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "seed": "bun run src/scripts/seed.ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@hono/valibot-validator": "^0.6.1",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.10.8",
    "postgres": "^3.4.8",
    "shared": "workspace:*",
    "valibot": "^1.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/bun": "latest",
    "drizzle-kit": "^0.30.1",
    "vitest": "^2.0.0"
  }
}